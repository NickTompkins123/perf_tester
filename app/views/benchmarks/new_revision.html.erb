<div class="page-header">
  <h1>Start new benchmarking session</h1>
</div>

<%= form_for @revision, url: {action: 'run_benchmarks'}, html: {role: "form"} do |f| %>

  <% @revision.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"><%= msg %></div>
  <% end %>

  <div class="form-group">
    <%= label_tag(:revision_name, "Name of the revision:") %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:revision_path, "Name of the folder containing dist:") %>
    <p class="help-block">This folder should be placed into \\spb-hlc-kv8\Users\ilaevsky\dists\</p>
    <%= f.text_field :path, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag(:revision_description, "Optional description:") %>
    <%= f.text_area :description, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
    <%= label_tag(:revision_env, "Environment variables:") %>
    <p class="help-block">Use semicolon to separate values.</p>
    <%= f.text_field :env, class: "form-control" %>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
